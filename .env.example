# Server
PORT=5002
NODE_ENV=development
CLIENT_URL=http://localhost:5002

# Database
MONGODB_URI=mongodb://localhost:27017/planity
# If using MongoDB Atlas, use the Atlas connection string:
# MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/planity?retryWrites=true&w=majority

# JWT / Auth
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=10

# Email (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM="Planity <your_email@example.com>"

# Stripe (set your own test keys)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Optional: Redis (for queues, Socket.IO adapter)
REDIS_URL=redis://localhost:6379

# Optional: Sentry (error reporting)
SENTRY_DSN=

# Other
UPLOADS_DIR=uploads
